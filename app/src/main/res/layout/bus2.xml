<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"

        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:layout_marginLeft="@dimen/spacing_middle"
            android:layout_marginRight="@dimen/spacing_middle"
            android:clipToPadding="false"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="1dp"
            app:cardElevation="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:id="@+id/lin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/iv_bus_swap"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rel_bus_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/metrics_2"
                        android:background="@color/white"
                        android:padding="@dimen/metrics_4">


                        <ImageView
                            android:id="@+id/Bus_from_img1"
                            android:layout_width="@dimen/metrics_24"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            app:srcCompat="@drawable/ic_location" />

                        <TextView
                            android:id="@+id/edit_Bus_from_city"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/Bus_from_img1"
                            android:layout_alignParentRight="true"
                            android:layout_toRightOf="@+id/Bus_from_img1"
                            android:hint="from"
                            android:padding="@dimen/metrics_10"
                            android:textSize="@dimen/text_14" />


                        <ImageView
                            android:layout_width="@dimen/metrics_24"
                            android:layout_height="match_parent"
                            android:layout_alignTop="@+id/edit_Bus_from_city"
                            android:layout_alignRight="@+id/edit_Bus_from_city"
                            android:layout_alignBottom="@+id/edit_Bus_from_city"
                            app:srcCompat="@drawable/ic_search" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rel_bus_to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/metrics_2"
                        android:background="@color/white"
                        android:padding="@dimen/metrics_4">


                        <ImageView
                            android:id="@+id/Bus_to_img1"
                            android:layout_width="@dimen/metrics_24"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            app:srcCompat="@drawable/ic_location" />

                        <TextView
                            android:id="@+id/edit_Bus_to_city"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/Bus_to_img1"
                            android:layout_alignParentRight="true"
                            android:layout_toRightOf="@+id/Bus_to_img1"
                            android:hint="from to "
                            android:padding="@dimen/metrics_10"
                            android:textSize="@dimen/text_14" />


                        <ImageView
                            android:layout_width="@dimen/metrics_24"
                            android:layout_height="match_parent"
                            android:layout_alignBottom="@+id/edit_Bus_to_city"
                            android:layout_alignRight="@+id/edit_Bus_to_city"
                            android:layout_alignTop="@+id/edit_Bus_to_city"
                            app:srcCompat="@drawable/ic_search" />

                    </RelativeLayout>


                </LinearLayout>


                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/iv_bus_swap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/metrics_6"
                    android:layout_marginTop="@dimen/metrics_6"
                    android:layout_marginEnd="@dimen/metrics_6"
                    android:layout_marginBottom="@dimen/metrics_6"
                    android:background="@drawable/ic_swap_bus"
                    app:backgroundTint="@color/white"
                    app:borderWidth="0dp"
                    app:elevation="@dimen/metrics_6"
                    app:fabSize="auto"
                    app:srcCompat="@drawable/ic_swap_bus" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:layout_marginLeft="@dimen/spacing_middle"
            android:layout_marginRight="@dimen/spacing_middle"
            android:clipToPadding="false"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="1dp"
            app:cardElevation="2dp">


            <LinearLayout
                android:id="@+id/LinearLayout_bus_onward_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="@dimen/metrics_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/metrics_6"
                    android:text="Onward Date "
                    android:textColor="@color/black" />


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_bus_onward_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_cal"
                        android:drawablePadding="@dimen/metrics_6"
                        android:drawableTint="@color/teal_700"
                        android:gravity="left|center"
                        android:padding="@dimen/metrics_6" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_bus_today"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/metrics_6"
                            android:singleLine="true"
                            android:text="Today"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="@color/black" />


                        <TextView
                            android:id="@+id/tv_bus_tomorrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/metrics_6"
                            android:text="Tomorrow"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>
        <Button
            android:id="@+id/btn_bus_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/metrics_40"
            android:paddingRight="@dimen/metrics_40"
            android:layout_marginTop="@dimen/metrics_10"
            android:text="SEARCH BUS"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>