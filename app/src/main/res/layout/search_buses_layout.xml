<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_flight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.021">
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Bus Travals Name"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:id="@+id/bustraveals_name"/>

            <TextView
                android:id="@+id/tv_travel_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/travel_container"
                android:layout_alignLeft="@+id/travel_container"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="4dp"
                android:maxWidth="@dimen/metrics_200"
                android:singleLine="true"
                android:hint="AC Sleeper"
                android:textAllCaps="true"
                android:textColor="@color/search_sub"
                android:textSize="@dimen/text_14" />

            <LinearLayout
                android:id="@+id/time"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:hint="Departur Time"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:id="@+id/departur_time"/>
                <View
                    android:layout_width="30dp"
                    android:layout_height="1dp"

                    android:layout_gravity="center_vertical"
                    android:background="@color/teal_700"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:hint="Durartion"
                        android:id="@+id/duration"/>


                </LinearLayout>
                <View
                    android:layout_width="30dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/teal_700"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="Arrival Time"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:id="@+id/arrival_time"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/seatInfo"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_travel_type"
                android:layout_alignLeft="@+id/travel_container"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/noOfbusSeats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="6 seats"
                    android:textColor="@color/search_extra"
                    android:textSize="@dimen/text_14" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Seats Left"
                    android:layout_marginLeft="-25dp"
                    android:textColor="@color/search_extra"
                    android:textSize="@dimen/text_14" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/ratingsLayout"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dperte">

                <TextView
                    android:id="@+id/tv_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@color/colorPrimary"
                    android:hint="4.4"
                    android:paddingLeft="@dimen/metrics_3"
                    android:paddingRight="@dimen/metrics_3"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_noOfReviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_rating"
                    android:hint="123 Ratings"
                    android:paddingLeft="@dimen/metrics_10"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_10" />

                <ImageView
                    android:layout_marginTop="4dp"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center"
                    android:id="@+id/rupimg"
                    android:layout_marginLeft="280dp"
                    android:src="@drawable/rupees"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_rate"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:text="570"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="@dimen/text_14"
                    android:textStyle="bold"
                    android:visibility="visible" />

            </RelativeLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>